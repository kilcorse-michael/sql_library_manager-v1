extends layout.pug
block content
    
  h1 Books
  include search.pug  
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href=`/book/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year
        tr
    p
        h1= noResults
      
